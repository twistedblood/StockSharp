<UserControl x:Class="StockSharp.Xaml.IpAddressEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:xaml="clr-namespace:StockSharp.Xaml"
			 xmlns:editors="http://schemas.actiprosoftware.com/winfx/xaml/editors"
			 DataContext="{Binding RelativeSource={RelativeSource Self}}">
	
	<Control.Resources>
		<Style TargetType="{x:Type editors:MaskedTextBox}">
			<Setter Property="Validation.ErrorTemplate">
				<Setter.Value>
					<ControlTemplate>
						<DockPanel LastChildFill="True">
							<Border BorderBrush="Red" BorderThickness="1">
								<AdornedElementPlaceholder />
							</Border>
						</DockPanel>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
			<Style.Triggers>
				<Trigger Property="Validation.HasError" Value="true">
					<Setter Property="ToolTip"
							Value="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors)[0].ErrorContent}"/>
				</Trigger>
			</Style.Triggers>
		</Style>

		<xaml:IpAddressConverter x:Key="AddressConverter"/>
	</Control.Resources>

	<Grid>
		<editors:MaskedTextBox x:Name="AddressCtrl">
			<editors:MaskedTextBox.Text>
				<Binding Path="Address"
						 RelativeSource="{RelativeSource AncestorType={x:Type xaml:IpAddressEditor}}"
						 Mode="TwoWay"
						 NotifyOnValidationError="True"
						 UpdateSourceTrigger="PropertyChanged" 
						 Converter="{StaticResource AddressConverter}">
					<Binding.ValidationRules>
						<xaml:IpAddressValidationRule/>
					</Binding.ValidationRules>
				</Binding>
			</editors:MaskedTextBox.Text>
		</editors:MaskedTextBox>
	</Grid>
</UserControl>
