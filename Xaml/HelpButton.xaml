<Button
	x:Class="StockSharp.Xaml.HelpButton"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:xaml="clr-namespace:Ecng.Xaml;assembly=Ecng.Xaml"
	xmlns:loc="clr-namespace:StockSharp.Localization;assembly=StockSharp.Localization"
	IsEnabled="False" ToolTip="{x:Static loc:LocalizedStrings.Help}">
	<StackPanel>
		<TextBlock x:Name="TextCtrl" Text="{x:Static loc:LocalizedStrings.Help}" Visibility="Collapsed" />
		<xaml:BmpImage x:Name="ImgCtrl" Source="Images\help_16x16.png" />
	</StackPanel>
</Button>